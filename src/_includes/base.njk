<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or "Moje galerie" }}</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Funnel+Display:wght@300..800&display=swap" rel="stylesheet">

</head>
<body>
  <header>
    {% if page.url == "/" %}
      <a class="page-title" href="/"><h1 >DIArtLOG</h1></a>
    {% endif %}
    {% if page.url != "/" %}
      <a href="/"><h3>DIArtLOG</h3></a>
    {% endif %}
  </header>

  <main>
    {{ content | safe }}
  </main>

  <footer>
  <p>&copy; 2025</p>
</footer>
<script src="/js/filters.js" defer></script>
<script src="/js/description-toggle.js" defer></script>
<script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css" />
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const lightbox = GLightbox({
      selector: '.glightbox',
      loop: true,         // umožní nekonečné listování
      touchNavigation: true,
      keyboardNavigation: true,
    });
  });
</script>



</body>
</html>
